{% schema %}
{
  "name": "Custom Announcement Bar",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "This is a custom announcement!"
    }
  ],
  "presets": [
    {
      "name": "Custom Announcement Bar",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<!-- custom-announcement-bar.liquid -->
<section id="custom-announcement-bar" class="custom-announcement-bar">
  <div 
    class="custom-announcement-bar-content" 
    style="background-image: url({{ section.settings.background_image | image_url }}); background-repeat: repeat-x;">
    <div class="custom-announcement-bar-text">
      <p>{{ section.settings.announcement_text }}</p>
    </div>
  </div>
</section>

<!-- CSS included inline -->
<style>
  /* Reset margin and padding for the section */
  #custom-announcement-bar {
    width: 100%;
    text-align: center;
    padding: 0; /* Remove any padding */
    margin: 0; /* Remove any margin */
    color: #fff;
  }

  /* Reset padding for the announcement bar content */
  .custom-announcement-bar-content {
    width: 100%;
    background-position: top; /* Aligns the image at the top */
    background-repeat: repeat-x; /* Ensures the image repeats on the X-axis */
    background-size: auto; /* Keeps the original size of the image */
    text-align: center;
    padding: 0; /* Remove padding inside the content */
  }

  /* Ensure no margin inside the text container */
  .custom-announcement-bar-text p {
    margin: 0; /* Remove any default margin */
    font-size: 16px;
    color: #fff; /* Default text color */
  }
</style>

